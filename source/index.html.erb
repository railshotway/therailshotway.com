---
pageable: true
per_page: 10
---

<div class="posts">
  <% page_articles.each_with_index do |article, i| %>
  <div class="post">
    <h1 class="post-title">
    <%= link_to article.title, article %>
    </h1>

    <span class="post-date"><%= article.date.strftime('%b %e') %></span>

    <%= truncate(article.body, length: 120) %>
  </div>
  <% end %>
</div>

<% if paginate %>
  <div class="pagination">
  <% if next_page %>
    <%= link_to 'Next page', next_page, class: "pagination-item older"  %>
  <% end %>
</div>
<% end %>
